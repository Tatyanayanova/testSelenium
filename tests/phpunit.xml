<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"         
         syntaxCheck="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         bootstrap="bootstrap.php"
>
    <testsuites>
        <testsuite name="functional">
            <directory suffix=".php">test</directory>
        </testsuite>
    </testsuites>

    <logging> 		
        <log type="testdox-html" target="reports/docs/testdox.html"/>
        <log type="junit" target="reports/php/junit.xml" logIncompleteSkipped="false"/>
    </logging>

</phpunit>
